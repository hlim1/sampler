<?xml version="1.0"?>
<interface>
  <requires lib="gtk+" version="2.16"/>
  <!-- interface-naming-policy toplevel-contextual -->
  <object class="GtkUIManager" id="ui-manager">
    <child>
      <object class="GtkActionGroup" id="action-group">
        <child>
          <object class="GtkToggleAction" id="menu-master">
            <property name="active">True</property>
            <property name="name">menu-master</property>
            <property name="label" translatable="yes">Automatic _Reporting</property>
          </object>
        </child>
        <child>
          <object class="GtkAction" id="menu-about">
            <property name="stock_id">gtk-about</property>
            <property name="name">menu-about</property>
            <signal handler="on_about_activate" name="activate"/>
          </object>
        </child>
      </object>
    </child>
    <ui>
      <popup name="popup">
        <menuitem action="menu-master"/>
        <menuitem action="menu-about"/>
      </popup>
    </ui>
  </object>
  <object class="GtkAboutDialog" id="about">
    <property name="border_width">5</property>
    <property name="title" translatable="yes">About Bug Isolation Monitor</property>
    <property name="resizable">False</property>
    <property name="type_hint">dialog</property>
    <property name="program_name">Bug Isolation Monitor</property>
    <property name="copyright" translatable="yes">Copyright © 2003–2004 The Regents of the University of California
Copyright © 2005–2011 Benjamin R. Liblit</property>
    <property name="comments" translatable="yes">View and set bug isolation preferences</property>
    <property name="website">http://research.cs.wisc.edu/cbi/</property>
    <property name="website_label" translatable="yes">The Cooperative Bug Isolation Project</property>
    <property name="license" translatable="yes">Copyright © 2003–2004, The Regents of the University of California. All rights reserved.

Copyright © 2005–2011, Benjamin R. Liblit. All rights reserved.

