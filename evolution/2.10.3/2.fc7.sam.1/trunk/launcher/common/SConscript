from utils import instantiate

Import('env', 'testPythons')
env = env.Copy(pixmapsdir=env.subst('$pixmapsdir'))

Default(env.Template('SamplerConfig.py.in', varlist=['VERSION', 'pixmapsdir']))
pythons = ['BlipIcons.py', 'GConfDir.py', 'GConfNotifier.py', 'Keys.py', 'LazyIcon.py', 'MasterNotifier.py', 'Signals.py', 'StatusIcon.py', 'WindowIcon.py']

Import('dist')
dist(['SConscript', pythons, 'SamplerConfig.py.in'])

pythons.append('SamplerConfig.py')
compiled = env.PythonBytecodeOpt(pythons)

testPythons(env, pythons)

Alias('install', env.Install('$DESTDIR$commondir', compiled))
